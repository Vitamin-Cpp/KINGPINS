<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Products">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:contentDescription="@string/product"
            app:srcCompat="@drawable/products1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:padding="20dp"
            android:background="@color/colorSilverWhite"
            android:text="@string/shop_by_category"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="20dp"
            >

            <Button
                android:id="@+id/bttnBooks"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_books"
                android:drawableLeft="@drawable/ic_books"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:text="Books"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bttnStaitionery"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_stationery"
                android:drawableLeft="@drawable/ic_stationery"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:text="Stationery"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="20dp"
            >

            <Button
                android:id="@+id/bttnGadgets"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_baseline_laptop_mac_24"
                android:drawableLeft="@drawable/ic_baseline_laptop_mac_24"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:text="Gadgets"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bttnOffice"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_office"
                android:drawableLeft="@drawable/ic_office"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:text="Office Consumables"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/bttnFurniture"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_furnitute"
                android:drawableLeft="@drawable/ic_furnitute"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:text="Furniture"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bttnPeripherals"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_peripherals"
                android:drawableLeft="@drawable/ic_peripherals"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:text="Peripherals"
                android:textColor="@color/black" />

        </LinearLayout>




    </LinearLayout>
</FrameLayout>