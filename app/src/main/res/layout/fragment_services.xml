<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/services1"
            android:contentDescription="@string/product" />

        <LinearLayout
            android:id="@+id/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/bttnTutor"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="296dp"
                android:layout_height="82dp"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_books"
                android:drawableLeft="@drawable/ic_books"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Book A Tutor"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="20dp"
            >

            <Button
                android:id="@+id/bttnRepair"
                android:layout_width="299dp"
                android:layout_height="75dp"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_baseline_laptop_mac_24"
                android:drawableLeft="@drawable/ic_baseline_laptop_mac_24"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="LAPTOP REPAIR"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/bttnFurniture"
                android:layout_width="303dp"
                android:layout_height="73dp"
                android:background="@color/colorSilverWhite"
                android:drawableStart="@drawable/ic_furnitute"
                android:drawableLeft="@drawable/tutor"
                android:drawableTint="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:text="MENTORSHIP"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>