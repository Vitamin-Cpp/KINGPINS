<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#2f333f"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".custompopup">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/circlebackground"
        android:gravity="center"
        android:padding="5dp"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/selectediImage"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name" />

        <Button
            android:id="@+id/button_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebackground"
            android:text="Choose file"
            android:textSize="12dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="60dp">

            <RadioButton
                android:id="@+id/rdProduct"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:drawablePadding="20dp"
                android:paddingLeft="20dp"
                android:text="Product" />

            <RadioButton
                android:id="@+id/rdService"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Services" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#eaad43"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/productName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#2f333f"
                android:hint="Description"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#45bc62"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/productPrice"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#2f333f"
                android:hint="price"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#49acd5"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spCategory"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#2f333f"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="14sp"

                />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/circlebackground"
        android:onClick="doUpload"
        android:padding="5dp"
        android:text="upload add"
        android:textColor="@color/white"
        android:textSize="12dp" />


</LinearLayout>
